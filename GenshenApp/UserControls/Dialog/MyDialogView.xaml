<UserControl
    x:Class="GenshenApp.UserControls.MyDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:GenshenApp.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="us"
    d:DesignHeight="700"
    d:DesignWidth="1250"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Storyboard x:Key="Show">
            <DoubleAnimation
                FillBehavior="Stop"
                Storyboard.TargetName="us"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="Hide">
            <DoubleAnimation
                FillBehavior="Stop"
                Storyboard.TargetName="us"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>
    </UserControl.Resources>
    <Grid Background="#77000000" MouseDown="Grid_MouseDown">
        <ContentControl x:Name="DialogContent" />
    </Grid>
</UserControl>
