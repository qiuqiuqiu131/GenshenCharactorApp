<UserControl
    x:Class="GenshenCharactorApp.Views.FailedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GenshenCharactorApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            x:Name="failedText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="35"
            Text="未连接网络，请确保网络连接后再启动程序" />
        <Button
            Width="100"
            Height="35"
            Margin="0,200,0,0"
            Click="Button_Click"
            Content="退出"
            FontSize="20" />
    </Grid>
</UserControl>
